<div class="listado-libros row">
    <div class="col-sm-12 card pd-10">
        <div class="row">
            <div class="col-sm-4">
                <!--TODO poner libreria y cargar img desde BD-->
                <div class="owl-carousel owl-theme">
                    {{#each libro.imagenes}}
                        <div class="item">
                            <img src="https://res.cloudinary.com/h3dx0/image/upload/{{this}}.png" width="400px"
                                 alt="IMG">
                        </div>
                    {{/each}}
                </div>

            </div>
            <div class="col-sm-8">
                <h2 class="card-title">{{libro.titulo}}</h2>
                <span class="badge badge-info text-upper pd-5">Asignatura: {{libro.categorias}}</span>,
                <span class="badge badge-info pd-5">Grado escolar: {{libro.gradoEscolar}}</span>
                <h5 class="bb  mt-3">Descripci√≥n</h5>
                <p>{{libro.descripcion}}</p>
                <p class="font-weight-bold fs-25 pull-right">${{libro.precio}}</p>

                <button type="button" class="btn btn-success">Comprar</button>
            </div>

        </div>
    </div>
</div>

</div>